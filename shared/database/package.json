{
  "name": "@event-system/database",
  "version": "1.0.0",
  "description": "Shared database utilities and migrations for the event reservation system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "migrate:up": "node dist/migrations/migrate.js up",
    "migrate:down": "node dist/migrations/migrate.js down",
    "migrate:create": "node dist/migrations/migrate.js create",
    "seed": "node dist/seeders/seed.js"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/pg": "^8.11.0"
  },
  "dependencies": {
    "@event-system/types": "file:../types",
    "@event-system/utils": "file:../utils",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.2",
    "dotenv": "^16.3.1"
  }
}
